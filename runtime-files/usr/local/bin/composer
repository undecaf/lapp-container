#!/bin/bash

#
# Runs Composer as user $APACHE_USER and in working directory $WWW_ROOT
# using proxy settings if there are any.
#

# Load the runtime environment
. /usr/local/lib/env.inc
load_env

# Run Composer as $APACHE_USER and in directory $WWW_ROOT
su-exec $APACHE_USER /bin/sh \
    -c "env http_proxy=$http_proxy https_proxy=$https_proxy /usr/local/bin/composer.phar --working-dir=$WWW_ROOT $*"
