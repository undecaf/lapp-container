# Container environment variables
export HOSTNAME=$(hostname)
export LANG=${LAPP_LANG:-C.UTF-8}

# Proxy settings, always lowercase
export http_proxy=${http_proxy:-$HTTP_PROXY}
export https_proxy=${https_proxy:-$HTTPS_PROXY}

# Derived environment variables
export LOGS_BASE=/var/log

export APACHE_USER=apache
export APACHE_VHOSTS=$WWW_ROOT/.vhosts
export APACHE_LOGS=$LOGS_BASE/apache2
export APACHE_CERTS=$WWW_ROOT/.certs
export DEFAULT_CERT=$APACHE_CERTS/default

export DOCROOT=$WWW_ROOT/public
export WWW_ROOT_GZ=$APACHE_HOME/www-root.tar.gz

export PG_USER=postgres
export PG_RUN=/run/postgresql

# Original stdout at the entrypoint
export STDOUT=/var/run/stdout
